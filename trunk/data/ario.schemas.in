<gconfschemafile>
   <schemalist>
      <schema>
        <key>/schemas/apps/ario/state/vpaned_position</key>
        <applyto>/apps/ario/state/vpaned_position</applyto>
        <owner>ario</owner>
        <type>int</type>
        <default>400</default>
        <locale name="C">
	<short>Position of main window pane</short>
	<long>Position of main window pane.</long>
        </locale>
      </schema>

      <schema>
        <key>/schemas/apps/ario/host</key>
        <applyto>/apps/ario/host</applyto>
        <owner>ario</owner>
        <type>string</type>
        <default>localhost</default>
        <locale name="C">
	<short>Host to connect to</short>
	<long>Host to connect to.</long>
        </locale>
      </schema>

      <schema>
        <key>/schemas/apps/ario/port</key>
        <applyto>/apps/ario/port</applyto>
        <owner>ario</owner>
        <type>int</type>
        <default>6600</default>
        <locale name="C">
	<short>Port to connect to</short>
	<long>Port to connect to.</long>
        </locale>
      </schema>

      <schema>
        <key>/schemas/apps/ario/timeout</key>
        <applyto>/apps/ario/timeout</applyto>
        <owner>ario</owner>
        <type>float</type>
        <default>8.0</default>
        <locale name="C">
	<short>The timeout for the connection to mpd</short>
	<long>The timeout for the connection to mpd.</long>
        </locale>
      </schema>

      <schema>
        <key>/schemas/apps/ario/autoconnect</key>
        <applyto>/apps/ario/autoconnect</applyto>
        <owner>ario</owner>
        <type>bool</type>
        <default>1</default>
        <locale name="C">
	<short>Define if Ario must autoconnect to mpd or not</short>
	<long>Define if Ario must autoconnect to mpd or not.</long>
        </locale>
      </schema>

      <schema>
        <key>/schemas/apps/ario/auth</key>
        <applyto>/apps/ario/auth</applyto>
        <owner>ario</owner>
        <type>bool</type>
        <default>0</default>
        <locale name="C">
	<short>Define if Ario must use authentication to connect to mpd or not</short>
	<long>Define if Ario must use authentication to connect to mpd or not.</long>
        </locale>
      </schema>

      <schema>
        <key>/schemas/apps/ario/password</key>
        <applyto>/apps/ario/password</applyto>
        <owner>ario</owner>
        <type>string</type>
        <default></default>
        <locale name="C">
	<short>The password to connect to mpd</short>
	<long>The password to connect to mpd.</long>
        </locale>
      </schema>

      <schema>
        <key>/schemas/apps/ario/cover_tree_hidden</key>
	<applyto>/apps/ario/cover_tree_hidden</applyto>
	<owner>ario</owner>
	<type>bool</type>
	<default>0</default>
	<locale name="C">
	<short>Hide the covers in the albums treeview</short>
	<long>When enabled, ario hide the covers in the albums treeview</long>
	</locale>
      </schema>

      <schema>
        <key>/schemas/apps/ario/cover_amazon_country</key>
	<applyto>/apps/ario/cover_amazon_country</applyto>
	<owner>ario</owner>
	<type>string</type>
	<default>com</default>
	<locale name="C">
	<short>The amazon country to use to get the covers</short>
	<long>You can search for your cover on amazon.com .fr .de .uk or .ca to have more accurate results</long>
	</locale>
      </schema>

      <schema>
        <key>/schemas/apps/ario/state/window_width</key>
        <applyto>/apps/ario/state/window_width</applyto>
        <owner>ario</owner>
        <type>int</type>
        <default>600</default>
        <locale name="C">
	<short>Main window width</short>
	<long>Main window width.</long>
        </locale>
      </schema>

      <schema>
        <key>/schemas/apps/ario/state/window_height</key>
        <applyto>/apps/ario/state/window_height</applyto>
        <owner>ario</owner>
        <type>int</type>
        <default>600</default>
        <locale name="C">
	<short>Main window height</short>
	<long>Main window height.</long>
        </locale>
      </schema>

      <schema>
        <key>/schemas/apps/ario/state/window_maximized</key>
        <applyto>/apps/ario/state/window_maximized</applyto>
        <owner>ario</owner>
        <type>bool</type>
        <default>1</default>
        <locale name="C">
	<short>Main window maximization state</short>
	<long>If true, the main window is maximized.</long>
        </locale>
      </schema>
      
      <schema>
        <key>/schemas/apps/ario/use_proxy</key>
        <applyto>/apps/ario/use_proxy</applyto>
        <owner>ario</owner>
        <type>bool</type>
        <default>0</default>
        <locale name="C">
	<short>Define if Ario must use a proxy for remote connections</short>
	<long>Define if Ario must use a proxy for remote connections.</long>
        </locale>
      </schema>

      <schema>
        <key>/schemas/apps/ario/proxy_address</key>
	<applyto>/apps/ario/proxy_address</applyto>
	<owner>ario</owner>
	<type>string</type>
	<default>192.168.0.1</default>
	<locale name="C">
	<short>Define the address of the proxy</short>
	<long>Define the address of the proxy</long>
	</locale>
      </schema>

      <schema>
        <key>/schemas/apps/ario/proxy_port</key>
        <applyto>/apps/ario/proxy_port</applyto>
        <owner>ario</owner>
        <type>int</type>
        <default>8080</default>
        <locale name="C">
	<short>Define the port of the proxy</short>
	<long>Define the port of the proxy.</long>
        </locale>
      </schema>

      <schema>
        <key>/schemas/apps/ario/state/source</key>
        <applyto>/apps/ario/state/source</applyto>
        <owner>ario</owner>
        <type>int</type>
        <default>0</default>
        <locale name="C">
	<short>Define the source used in Ario</short>
	<long>0 for the library, 1 for the radios</long>
        </locale>
      </schema>

      <schema>
        <key>/schemas/apps/ario/show_tabs</key>
        <applyto>/apps/ario/show_tabs</applyto>
        <owner>ario</owner>
        <type>bool</type>
        <default>1</default>
        <locale name="C">
	<short>Define if the view tabs are shown.</short>
	<long>Define if the view tabs are shown.</long>
        </locale>
      </schema>

    </schemalist>
</gconfschemafile>
